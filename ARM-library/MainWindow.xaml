<Window x:Class="ARM_library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="АРМ-библиотека" Height="720" Width="1100" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#F3F5F7" Padding="12">
            <DockPanel>
                <TextBlock x:Name="UserInfoText" FontWeight="SemiBold" />
                <Button DockPanel.Dock="Right" Content="Выйти" Width="90" Click="Logout_Click"/>
            </DockPanel>
        </Border>

        <TabControl x:Name="Tabs" Margin="12">
            <TabItem Header="Книги">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Обновить" Width="110" Margin="0,0,8,0" Click="Books_Refresh_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="BooksGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </DockPanel>
            </TabItem>
            <TabItem Header="Читатели">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Обновить" Width="110" Margin="0,0,8,0" Click="Readers_Refresh_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="ReadersGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </DockPanel>
            </TabItem>
            <TabItem Header="Выдачи/Возвраты">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Выдать" Width="110" Margin="0,0,8,0" Click="Issues_Issue_Click"/>
                        <Button Content="Вернуть" Width="110" Margin="0,0,8,0" Click="Issues_Return_Click"/>
                        <Button Content="Обновить" Width="110" Click="Issues_Refresh_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="IssuesGrid" AutoGenerateColumns="True" IsReadOnly="True" />
                </DockPanel>
            </TabItem>
            <TabItem x:Name="EmployeesTab" Header="Сотрудники">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Обновить" Width="110" Click="Employees_Refresh_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="EmployeesGrid" AutoGenerateColumns="True" IsReadOnly="True"/>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>


