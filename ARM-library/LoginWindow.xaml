<Window x:Class="ARM_library.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="260" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="18" FontWeight="SemiBold" Text="АРМ-библиотека" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Логин:"/>
        <TextBox x:Name="UsernameBox" Grid.Row="1" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Пароль:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock x:Name="ErrorText" Grid.Row="3" Grid.ColumnSpan="2" Foreground="Firebrick" Margin="0,10,0,0" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="110" Margin="0,0,8,0" Content="Регистрация" Click="Register_Click"/>
            <Button Width="90" Margin="0,0,8,0" Content="Войти" Click="Login_Click"/>
            <Button Width="90" Content="Выход" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>


