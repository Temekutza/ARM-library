<Window x:Class="ARM_library.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="360" Width="520" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="16" FontWeight="SemiBold" Text="Регистрация пользователя" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Сотрудник:"/>
        <ComboBox x:Name="EmployeesBox" Grid.Row="1" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Логин:"/>
        <TextBox x:Name="UsernameBox" Grid.Row="2" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Повтор:"/>
        <PasswordBox x:Name="Password2Box" Grid.Row="4" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,0" Foreground="Gray"
                   Text="Роль по умолчанию: Librarian. (Создание Admin можно добавить отдельно для администратора.)"
                   TextWrapping="Wrap"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="110" Margin="0,0,8,0" Content="Создать" Click="Create_Click"/>
            <Button Width="110" Content="Отмена" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>


