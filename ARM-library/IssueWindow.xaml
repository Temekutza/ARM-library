<Window x:Class="ARM_library.IssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выдать книгу" Height="340" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="16" FontWeight="SemiBold" Text="Оформление выдачи" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Книга:"/>
        <ComboBox x:Name="BooksBox" Grid.Row="1" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Читатель:"/>
        <ComboBox x:Name="ReadersBox" Grid.Row="2" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Сотрудник:"/>
        <ComboBox x:Name="EmployeesBox" Grid.Row="3" Grid.Column="1" Height="28" Margin="0,10,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0" Text="Дата выдачи:"/>
        <DatePicker x:Name="IssueDatePicker" Grid.Row="4" Grid.Column="1" Margin="0,10,0,0"/>

        <TextBlock x:Name="ErrorText" Grid.Row="5" Grid.ColumnSpan="2" Foreground="Firebrick" Margin="0,10,0,0" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Content="OK" Click="Ok_Click"/>
            <Button Width="90" Content="Отмена" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>


